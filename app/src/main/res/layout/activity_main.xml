<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.passini.ballnavigator.MainActivity"
    android:background="@color/colorBackground"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnStart"
        android:background="@color/colorDarkBlue"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvCoins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        />


    <TextView
        android:id="@+id/tvCoins"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:text="20 Coins"
        android:textColor="@color/colorDarkBlue"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnStart" />


    <Button
        android:id="@+id/btnOpenShop"
        android:background="@color/colorRed"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Shop"
        app:layout_constraintTop_toTopOf="@+id/tvCoins"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="63dp" />

    <Button
        android:id="@+id/btnAchievements"
        android:background="@color/colorLightBlue"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Achievements"
        app:layout_constraintTop_toTopOf="@+id/btnOpenShop"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="63dp" />


    <Button
        android:id="@+id/btnOpenHelp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/roundedbutton"
        android:text="?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintLeft_toLeftOf="@+id/btnOpenSetting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAchievements"
        app:layout_constraintVertical_bias="0.922" />

    <Button
        android:id="@+id/btnOpenSetting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/roundedbutton"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnOpenHelp"
        app:layout_constraintTop_toTopOf="@+id/btnAchievements"
        app:layout_constraintVertical_bias="0.922" />


</android.support.constraint.ConstraintLayout>
